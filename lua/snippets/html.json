{
  "th-text": {
    "prefix": "th-text",
    "body": ["th:text=\"${${1:expression}}\""]
  },
  "th-if": {
    "prefix": "th-if",
    "body": ["th:if=\"${${1:condition}}\""]
  },
  "th-each": {
    "prefix": "th-each",
    "body": ["th:each=\"${1:item} : ${${2:items}}\""]
  },
  "th-switch-case": {
    "prefix": "th-switch",
    "body": [
      "th:switch=\"${${1:value}}\">",
      "  <div th:case=\"${2:case1}\">$3</div>",
      "  <div th:case=\"${4:case2}\">$5</div>",
      "  <div th:case=\"*\">$6</div>"
    ]
  },
  "th-with": {
    "prefix": "th-with",
    "body": ["th:with=\"${1:var1}=${${2:value1}}, ${3:var2}=${${4:value2}}\""]
  },
  "th-fragment": {
    "prefix": "th-fragment",
    "body": ["th:fragment=\"${1:fragmentName}(${2:param1}, ${3:param2})\""]
  },
  "th-insert": {
    "prefix": "th-insert",
    "body": [
      "th:insert=\"~{${1:template} :: ${2:fragmentName}(${3:param1}, ${4:param2})}\""
    ]
  },
  "th-replace": {
    "prefix": "th-replace",
    "body": [
      "th:replace=\"~{${1:template} :: ${2:fragmentName}(${3:param1}, ${4:param2})}\""
    ]
  },
  "th-object": {
    "prefix": "th-object",
    "body": ["th:object=\"${${1:object}}\""]
  },
  "th-field": {
    "prefix": "th-field",
    "body": ["th:field=\"*{${1:field}}\""]
  },
  "th-action": {
    "prefix": "th-action",
    "body": ["th:action=\"@{/${1:endpoint}}\""]
  },
  "th-href": {
    "prefix": "th-href",
    "body": ["th:href=\"@{/${1:path}(${2:param1}=${3:value1})}\""]
  },
  "th-unless": {
    "prefix": "th-unless",
    "body": ["th:unless=\"${${1:condition}}\""]
  },
  "th-selected": {
    "prefix": "th-selected",
    "body": ["th:selected=\"${${1:condition}}\""]
  },
  "th-value": {
    "prefix": "th-value",
    "body": ["th:value=\"${${1:value}}\""]
  },
  "th-inline-text": {
    "prefix": "th-inline",
    "body": ["[[${${1:expression}]]"]
  },
  "th-errors": {
    "prefix": "th-errors",
    "body": ["th:errors=\"*{${1:field}}\""]
  },
  "th-block": {
    "prefix": "th-block",
    "body": [
      "<th:block th:${1:attribute}=\"${${2:expression}}\">",
      "  $3",
      "</th:block>"
    ]
  },
  "thymeleaf-layout": {
    "prefix": "th-layout",
    "body": [
      "<!DOCTYPE html>",
      "<html xmlns:th=\"http://www.thymeleaf.org\" xmlns:layout=\"http://www.ultraq.net.nz/thymeleaf/layout\">",
      "<head>",
      "    <meta charset=\"UTF-8\">",
      "    <title>${1:Page Title}</title>",
      "</head>",
      "<body>",
      "    $2",
      "</body>",
      "</html>"
    ]
  }
}
